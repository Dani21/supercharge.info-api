<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <description>
        Email
    </description>

    <bean id="mailSender" class="com.redshiftsoft.lib.mail.sender.MailSender">
        <constructor-arg>
            <bean class="com.redshiftsoft.lib.mail.MailClientConfig">
                <property name="host" value="smtp.gmail.com"/>
                <property name="port" value="25"/>
                <property name="startTLSEnabled" value="true"/>
                <property name="startTLSRequired" value="true"/>
                <property name="protocol" value="smtp"/>
                <property name="authentication">
                    <bean class="com.redshiftsoft.lib.mail.MailAuthentication">
                        <property name="user" value="${smtp.user}"/>
                        <property name="password" value="${smtp.password}"/>
                    </bean>
                </property>
            </bean>
        </constructor-arg>
    </bean>


</beans>